extends ../../blocks/template/template.pug

block title
    title Авторизация
block content
    section.sign-in
        .container__content
            .sign-in__content
                form(method="get").sign-in__block.signin
                    h1.h1-styles Войти
                    .signin__auth
                        input(type="email", placeholder="Email", name="email").input
                        input(type="password", placeholder="Пароль", name="password").input
                    .signin__btn
                        button(type="submit").arrow-btn
                            span Войти
                            svg(viewBox="0 0 18 18")
                                path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z")
                    .check-account.signin__check
                        span Нет аккаунта на Toxin?
                        a(href="sign-up.html").buttons-block_third создать
block scripts
    script(src="./js/pages/sign-in/sign-in.js")